<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_id"
    android:layout_width="415dp"
    android:backgroundTint="#343743"
    android:layout_height="75dp"
    android:background="#454A5E">

    <TextView
        android:id="@+id/scoreout"
        android:layout_width="196dp"
        android:layout_height="18dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="40dp"
        android:text="TextView"
        android:textSize="14sp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.043"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="346dp"
        android:layout_height="39dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/scorebatsmenname"
            android:layout_width="178dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/teama"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/scoreruns"
            android:layout_width="30dp"
            android:layout_height="28dp"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/scoreballs"
            android:layout_width="30dp"
            android:layout_height="28dp"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/score4s"
            android:layout_width="20dp"
            android:layout_height="28dp"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/scpre6s"
            android:layout_width="20dp"
            android:layout_height="28dp"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/scoressr"
            android:layout_width="56dp"
            android:layout_height="28dp"
            android:gravity="center|center_vertical"
            android:text="@string/textview"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="normal" />

    </TableRow>

</androidx.constraintlayout.widget.ConstraintLayout>